@model IEnumerable<BookShop.Models.Book>

@{
    ViewData["Title"] = "Read Book";
}

<div class="row pt-4">
    <h2 class="text-primary">Книги</h2>
    <div class="col-6 text-end">
        <a asp-action="Create" asp-controller="Book" class="btn btn-primary"><i class="fa-regular fa-plus"></i> Додання нової книги</a>
    </div>
</div>
<br>
<br>
@if (Model.Count() > 0)
{
    <table class="table table-bordered table-striped">
        <tr>
            <th>Назва книги</th>
            <th>Автор книги</th>
            <th>Видавництво</th>
            <th>Рік випуску</th>
            <th>Кількість сторінок</th>
            @*<th>Категорія</th> *@
            <th>Дії</th>
        </tr>
        @foreach (var obj in Model)
        {
            <tr>
                <td>@obj.Name</td>
                <td>@obj.Author</td>

                <td>@obj.Publisher</td>
                <td>@obj.Year</td>
                <td>@obj.Quantity</td>
             @*    <td>@obj.CategoryId</td> *@
                <td>
                    <a asp-controller="Book" asp-action="Update" asp-route-Id="@obj.Id" class="btn btn-primary m-1"><i class="fa-regular fa-pen-to-square"></i> Оновити</a>
                    <a asp-controller="Book" asp-action="Delete" asp-route-Id="@obj.Id" class="btn btn-danger m-1"><i class="fa-solid fa-trash"></i> Видалити</a>
                </td>
            </tr>
        }
    </table>
}
else
{
    <p><b>Книг немає!</b></p>
}