@model IEnumerable<BookShop.Models.Category>

@{
    ViewData["Title"] = "Read Category";
}

<div class="row pt-4">
    <h2 class="text-primary">Категорії</h2>
    <div class="col-6 text-end">
        <a asp-action="Create" asp-controller="Category" class="btn btn-primary"><i class="fa-regular fa-plus"></i> Додання нової категорії</a>
    </div>
</div>
<br><br>
@if (Model.Count() > 0)
{
    <table class="table table-bordered table-striped">
        <tr>
            <th>Назва категорії</th>
            <th>Порядок відображення</th>
            <th>Дії</th>
        </tr>
        @foreach (var obj in Model)
        {
            <tr>
                <td>@obj.Name</td>
                <td>@obj.DisplayOrder</td>
                <td>
                    <a asp-controller="Category" asp-action="Update" asp-route-Id="@obj.Id" class="btn btn-primary m-1"><i class="fa-regular fa-pen-to-square"></i> Оновити</a>
                    <a asp-controller="Category" asp-action="Delete" asp-route-Id="@obj.Id" class="btn btn-danger m-1"><i class="fa-solid fa-trash"></i> Видалити</a>
                </td>
            </tr>
        }
    </table>
}
else
{
    <p><b>Категорій не існує!</b></p>
}