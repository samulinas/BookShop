@model BookShop.Models.Category

@{
    ViewData["Title"] = "Delete Category";
}

<form asp-action="DeletePost" method="post">
    <h1 class="text-info pl-3">Видалення категорії</h1>
    <input asp-for="Id" hidden>
    <br>
    <div class="col-4">
        <label asp-for="Name"></label>
    </div>
    <div class="col-8">
        <span asp-validation-for="Name" class="text-danger"></span>
        <input asp-for="Name" class="form-control" disabled>
    </div>
    <br>
    <div class="col-4">
        <label asp-for="DisplayOrder"></label>
    </div>
    <div class="col-8">
        <span asp-validation-for="DisplayOrder" class="text-danger"></span>
        <input asp-for="DisplayOrder" class="form-control" disabled>
    </div>
    <br>
    <div class="col-8">
        <input type="submit" class="btn btn-success w-100" value="Видалити">
        <br><br>
        <a asp-action="Index" class="btn btn-success w-100">Назад</a>
    </div>
</form>